apiVersion: v1
items:
- apiVersion: {{ deployment_api }}
  kind: Deployment
  metadata:
    labels:
    name: {{ app_name }}-deployment
    namespace: {{ namespace }}
  spec:
    replicas: {{ replicas }}
{% if deployment_api == 'apps/v1' %}
    selector:
      matchLabels:
        app: {{ app_name }}
{% endif %}
    template:
      metadata:
        labels:
          app: {{ app_name }}
      spec:
        containers:
        - image: quay.io/openshifttest/openshift-nginx:latest 
          name: {{ app_name }}
          ports:
          - containerPort: 8081
- apiVersion: v1
  kind: Service
  metadata:
    labels:
      app: {{ app_name }}
    name: my-{{ app_name }}
    namespace: {{ namespace }}
  spec:
    ports:
    - port: 8081
      targetPort: 8081
    selector:
      app: {{ app_name }}
- apiVersion: route.openshift.io/v1
  kind: Route
  metadata:
    labels:
      app: {{ app_name }}
      service: my-{{ app_name }}
    name: my-{{ app_name }}
    namespace: {{ namespace }}
  spec:
    port:
      targetPort: 8081
    to:
      kind: Service
      name: my-{{ app_name }}
kind: List
metadata: {}
