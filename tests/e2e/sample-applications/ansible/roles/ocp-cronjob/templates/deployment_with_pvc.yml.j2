apiVersion: v1
items:
- apiVersion: {{ cronjob_api }}
  kind: CronJob
  metadata:
    labels:
      app: '{{ app_name }}'
    name: '{{ app_name }}'
  spec:
    jobTemplate:
      metadata:
        labels:
          cronowner: '{{ app_name }}'
      spec:
        template:
          metadata:
            labels:
              cronowner: '{{ app_name }}'
          spec:
            containers:
            - args:
              - /bin/sh
              - -c
              - echo "Hello! from namespace $CURRENT_NAMESPACE while using image {{ docker_image }}"
              env:
              - name: CURRENT_NAMESPACE
                valueFrom:
                  fieldRef:
                    fieldPath: metadata.namespace
              image: '{{ docker_image }}'
              name: '{{ app_name }}'
              volumeMounts:
              - mountPath: /downloads
                name: downloads
            restartPolicy: OnFailure
            volumes:
            - name: downloads
              persistentVolumeClaim:
                claimName: {{ app_name }}-pvc
    schedule: '*/1 * * * *'
kind: List
metadata: {}
---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: {{ app_name }}-pvc
  labels:
    app: '{{ app_name }}' 
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 500Mi
