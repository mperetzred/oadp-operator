---
kind: Namespace
apiVersion: v1
metadata:
  name: {{ namespace }}
  labels:
    app: mssql

---
apiVersion: v1
kind: Secret
metadata:
  name: mssql-secret
  namespace: {{ namespace }}
  labels:
    app: mssql
stringData:
  mssql-password: P@ssw0rd1!

---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ namespace }}-sa
  namespace: {{ namespace }}
  labels:
    component: {{ namespace }}

---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: mssql-pvc
  namespace: {{ namespace }}
  labels:
    app: mssql
spec:
  accessModes:
  - {{ accessmode }}
  resources:
    requests:
      storage: 10Gi 
{% if storage_class is defined and storage_class != "default" %}
  storageClassName: {{ storage_class | quote }}
{% endif %}

---
kind: SecurityContextConstraints
apiVersion: v1
metadata:
  name: {{ namespace }}-scc
allowPrivilegeEscalation: true
allowPrivilegedContainer: true
runAsUser:
  type: RunAsAny
seLinuxContext:
  type: RunAsAny
fsGroup:
  type: RunAsAny
supplementalGroups:
  type: RunAsAny
volumes:
- '*'
users:
- system:admin
- system:serviceaccount:{{ namespace }}:{{ namespace }}-sa

---
apiVersion: v1
kind: DeploymentConfig
metadata:
  name: mssql-deployment
  namespace: {{ namespace }}
  labels:
    app: mssql
spec:
  replicas: 1
  selector:
    name: mssql
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        name: mssql
        app: mssql
    spec:
      serviceAccountName: {{ namespace }}-sa
      containers:
      - env:
        - name: ACCEPT_EULA
          value: "Y"
        - name: SA_PASSWORD
          valueFrom:
            secretKeyRef:
              key: mssql-password
              name: mssql-secret
        image: quay.io/openshifttest/mssql-server:latest
        imagePullPolicy: Always
        name: mssql
        securityContext:
          privileged: true
        ports:
        - containerPort: 1433
        volumeMounts:
        - mountPath: "/var/opt/mssql/data"
          name: mssql-vol
      volumes:
      - name: mssql-vol
        persistentVolumeClaim:
          claimName: mssql-pvc

---
apiVersion: v1
kind: Service
metadata:
 name: mssql-service
 namespace: {{ namespace }}
spec:
 selector:
   app: mssql
 ports:
   - protocol: TCP
     port: 1433
     targetPort: 1433
---
apiVersion: {{ deployment_api }}
kind: Deployment
metadata:
 name: mssql-app-deployment
 namespace: {{ namespace }}
 labels:
   app: mssql-app
spec:
 replicas: 1
{% if deployment_api == 'apps/v1' %}
 selector:
   matchLabels:
     app: mssql-app
{% endif %}
 template:
   metadata:
     labels:
       app: mssql-app
   spec:
     terminationGracePeriodSeconds: 10
     serviceAccountName: {{ namespace }}-sa
     containers:
     - name: mssql-app
       image: quay.io/openshifttest/mssql-sample-app:microsoft
       imagePullPolicy: Always
       ports:
       - containerPort: 5000
       securityContext:
         privileged: true
       env:
       - name: ConnString
         value: "Server=mssql-service.{{ namespace }}.svc.cluster.local;Database=ProductCatalog;User ID=WebLogin; password=SQLPass1234!"

---
apiVersion: v1
kind: Service
metadata:
 name: mssql-app-service
 namespace: {{ namespace }}
spec:
 selector:
   app: mssql-app
 ports:
   - name: "tcp"
     protocol: TCP
     port: 5000
     targetPort: 5000

---
apiVersion: v1
kind: Route
metadata:
  name: mssql-app-route
  namespace: {{ namespace }}
spec:
  path: "/"
  to:
    kind: Service
    name: mssql-app-service
