---
kind: SecurityContextConstraints
apiVersion: v1
metadata:
  name: {{ namespace }}-scc
allowPrivilegeEscalation: true
allowPrivilegedContainer: true
runAsUser:
  type: RunAsAny
seLinuxContext:
  type: RunAsAny
fsGroup:
  type: RunAsAny
supplementalGroups:
  type: RunAsAny
volumes:
- '*'
users:
- system:admin
- system:serviceaccount:{{ namespace }}:{{ namespace }}-sa
