apiVersion: v1
kind: Secret
metadata:
  name: {{ app_name }}
  namespace: {{ namespace }}
  labels:
    app: {{ app_name }}
stringData:
  database-name: MYSQL_DATABASE
  database-password: MYSQL_PASSWORD
  database-root-password: MYSQL_ROOT_PASSWORD
  database-user: MYSQL_USER
---
apiVersion: v1
kind: Service
metadata:
  annotations:
    template.openshift.io/expose-uri: mysql://{.spec.clusterIP}:{.spec.ports[?(.name=="mysql")].port}
  name: {{ app_name }}
  namespace: {{ namespace }}
  labels:
    app: {{ app_name }}
spec:
  ports:
  - name: {{ app_name }}
    port: 3306
  selector:
    name: {{ app_name }}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{ app_name }}
  namespace: {{ namespace }}
  labels:
    app: {{ app_name }}
spec:
  accessModes:
  - {{ accessmode }}
{% if storage_class is defined and storage_class != "default" %}
  storageClassName: {{ storage_class | quote }}
{% endif %}
  resources:
    requests:
      storage: {{ storage_size }}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  annotations:
    template.alpha.openshift.io/wait-for-ready: 'true'
  name: {{ app_name }}
  namespace: {{ namespace }}
  labels:
    app: {{ app_name }}
spec:
  selector:
    matchLabels:
      app: {{ app_name }}
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: {{ app_name }}
    spec:
      containers:
      - image: registry.redhat.io/rhel8/mysql-80:latest
        name: {{ app_name }}            
        env:
        - name: MYSQL_USER
          valueFrom:
            secretKeyRef:
              key: database-user
              name: {{ app_name }}
        - name: MYSQL_PASSWORD
          valueFrom:
            secretKeyRef:
              key: database-password
              name: {{ app_name }}
        - name: MYSQL_ROOT_PASSWORD
          valueFrom:
            secretKeyRef:
              key: database-root-password
              name: {{ app_name }}
        - name: MYSQL_DATABASE
          valueFrom:
            secretKeyRef:
              key: database-name
              name: {{ app_name }}
        ports:
        - containerPort: 3306
          name: {{ app_name }}
        resources:
          limits:
            memory: 512Mi
        volumeMounts:
        - name: {{ app_name }}-data
          mountPath: /var/lib/{{ app_name }}
      volumes:
      - name: {{ app_name }}-data
        persistentVolumeClaim:
          claimName: {{ app_name }}